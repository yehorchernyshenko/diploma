@model Diploma.Models.ViewModels.AccountDetailsViewModel

@{
    ViewData["Title"] = "User Details";
}

<div>
    <h4>User account details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.BirthdayDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.BirthdayDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.IsAccountVerified)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.IsAccountVerified)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.FacebookProfileLink)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FacebookProfileLink)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.LinkedinProfileLink)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LinkedinProfileLink)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.EmailConfirmed)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.EmailConfirmed)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.PhoneNumberConfirmed)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PhoneNumberConfirmed)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Admin"))
    {
        if (Model.IsAccountVerified == false)
        {
            <form asp-controller="Admin" asp-action="VerifyUser">
                @Html.HiddenFor(model => model.UserId)
                <div class="form-group">
                    <input type="submit" value="Verify User" class="btn btn-default" />
                </div>
            </form>
        }

        if (Model.IsBlocked == false)
        {
            <form asp-controller="Admin" asp-action="BlockUser">
                @Html.HiddenFor(model => model.UserId)
                <div class="form-group">
                    <input type="submit" value="Block User" class="btn btn-default" />
                </div>
            </form>
        }

        if (Model.IsBlocked == true) {
            <form asp-controller="Admin" asp-action="UnblockUser">
                @Html.HiddenFor(model => model.UserId)
                <div class="form-group">
                    <input type="submit" value="Unblock User" class="btn btn-default" />
                </div>
            </form>
        }
    }

    <a asp-action="Index" asp-controller="Home">Back to List</a>
</div>

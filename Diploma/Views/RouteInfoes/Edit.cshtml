@model Diploma.Models.Entities.RouteInfo

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>RouteInfo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsDriver" /> @Html.DisplayNameFor(model => model.IsDriver)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsPassenger" /> @Html.DisplayNameFor(model => model.IsPassenger)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="GetUserCreatedRoutesList">Back to List</a>
</div>


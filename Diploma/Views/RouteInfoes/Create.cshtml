@using Diploma.Models.Enums
@model Diploma.Models.ViewModels.CreateRouteViewModel

@{
    ViewData["Title"] = "Create route";
}

<h2>Create</h2>

<h4>RouteInfo</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="checkbox">
                    @Html.LabelFor(m => m.From)
                    @Html.EditorFor(model => model.From)
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    @Html.LabelFor(m => m.To)
                    @Html.EditorFor(model => model.To)
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    @Html.LabelFor(m => m.Currency)
                    @Html.DropDownList("Currency", Html.GetEnumSelectList(typeof(Currency)))
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    @Html.LabelFor(m => m.Price)
                    @Html.EditorFor(model => model.Price)
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    @Html.LabelFor(m => m.DepartureTime)
                    @Html.EditorFor(model => model.DepartureTime)
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    @Html.LabelFor(m => m.DepartureDate)
                    @Html.EditorFor(model => model.DepartureDate)
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    @Html.LabelFor(m => m.Capacity)
                    @Html.EditorFor(model => model.Capacity)
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    @Html.LabelFor(m => m.RouteLength)
                    @Html.EditorFor(model => model.RouteLength)
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>